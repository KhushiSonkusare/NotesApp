<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/generalbg"
    tools:context=".NotesActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Subject"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"/>



    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_marginTop="27dp"
        android:columnCount="2"
        android:rowCount="3">

        <!-- Icon 1: Mathematics -->
        <ImageButton
            android:id="@+id/CWSButton"
            android:layout_width="167dp"
            android:layout_height="139dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginEnd="16dp"
            android:onClick="openCWSNotes"
            android:scaleType="fitCenter"
            android:src="@drawable/cws" />

        <!-- Icon 2: Physics -->
        <ImageButton
            android:id="@+id/OOPSButton"
            android:layout_width="153dp"
            android:layout_height="137dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginStart="16dp"
            android:onClick="openOPPsNotes"
            android:scaleType="fitCenter"
            android:src="@drawable/oop" />

        <!-- Icon 3: Chemistry -->
        <ImageButton
            android:id="@+id/physicsButton"
            android:layout_width="160dp"
            android:layout_height="136dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:onClick="openPhysicsNotes"
            android:scaleType="fitCenter"
            android:src="@drawable/phy" />

        <!-- Icon 4: Computer Science -->
        <ImageButton
            android:id="@+id/CAOButton"
            android:layout_width="153dp"
            android:layout_height="135dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:onClick="openCAONotes"
            android:scaleType="fitCenter"
            android:src="@drawable/cao" />

        <!-- Icon 5: English -->
        <ImageButton
            android:id="@+id/EnglishButton"
            android:layout_width="169dp"
            android:layout_height="122dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:onClick="openEnglishNotes"
            android:scaleType="fitCenter"
            android:src="@drawable/english" />

        <!-- Icon 6: Other Subject -->


    </GridLayout>

    <Button
        android:id="@+id/connectWithFriendsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="640dp"
        android:backgroundTint="#6F6FC8"
        android:text="Connect with Friends"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>
